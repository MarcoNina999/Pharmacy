@model Pharmacy.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";    
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="input-group">
        @Html.LabelFor(m => m.First_Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.First_Name, new { @class = "form-control col-lg-6 col-sm-12" })
        </div>
    </div>
    <div class="input-group">
        @Html.LabelFor(m => m.Last_Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Last_Name, new { @class = "form-control col-lg-6 col-sm-12" })
        </div>
    </div>
    <div class="input-group">
        @Html.LabelFor(m => m.Ci, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Ci, new { @class = "form-control col-lg-6 col-sm-12" })
        </div>
    </div>
    <div class="input-group">
        @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control col-lg-6 col-sm-12" })
        </div>
    </div>
    <div class="input-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-lg-6 col-sm-12" })
        </div>
    </div>
    <div class="input-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="input-group col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-lg-6 col-sm-12", placeholder = "Ingrese Contraseña" })
            <span class="input-group-btn">
                <button id="verPassword" class="btn btn-default" type="button">
                    <i class="fa fa-eye-slash icon"></i>
                </button>
            </span>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="input-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-lg-6 col-sm-12", placeholder = "Ingrese Contraseña" })
        </div>
    </div>
    <div class="input-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrar" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#verPassword').on('mousedown', function () {
            $('#Password').attr("type", "text");
            $('.icon').removeClass('fa fa-eye-slash').addClass('fa fa-eye');
        });

        $('#verPassword').on('mouseup mouseleave', function () {
            $('#Password').attr("type", "password");
            $('.icon').removeClass('fa fa-eye').addClass('fa fa-eye-slash');
        });
    </script>
        <script src="../../js/Style.js"></script>
        <script src="~/Scripts/jquery-3.5.1.min.js"></script>
}